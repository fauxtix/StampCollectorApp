<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="StampCollectorApp.Views.CollectionsPage"
    x:Name="CollectionsPageRef"
    Title="Coleções">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Gravar"
            IconImageSource="add.png" 
            Command="{Binding AddCollectionCommand}" />
    </ContentPage.ToolbarItems>


    <Grid Padding="20">
        <CollectionView 
                        ItemsSource="{Binding Collections}"
                        VerticalScrollBarVisibility="Always">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="12"
                           Padding="8"
                           Margin="0,0,0,12"
                           BackgroundColor="White"
                           HasShadow="True"
                           BorderColor="#e0e0e0">
                        <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto">
                            <Label Text="{Binding Name}"
                                   FontSize="14"
                                   VerticalOptions="Center"
                                   TextColor="#222"/>
                            <Button Grid.Column="1"
                                    Text="Editar"
                                    Command="{Binding BindingContext.EditCollectionCommand, Source={x:Reference CollectionsPageRef}}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="#2196F3"
                                    TextColor="White"
                                    CornerRadius="6"
                                    Padding="7"
                                    FontSize="14"
                                    Margin="0,0,8,0"
                                    VerticalOptions="Center"/>
                            <Button Grid.Column="2"
                                    Text="Apagar"
                                    Command="{Binding BindingContext.DeleteCollectionCommand, Source={x:Reference CollectionsPageRef}}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="#E53935"
                                    TextColor="White"
                                    CornerRadius="6"
                                    FontSize="14"
                                    Padding="7"
                                    VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>