<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StampCollectorApp.Views.EditCountryPage"
             xmlns:resx="clr-namespace:StampCollectorApp.Resources.Languages"
             Title="{resx:Localize Key=TituloCriarEditarSelo}"
    BackgroundColor="#f3f4f6">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="CountryNameEntry"
               Placeholder="{resx:Localize Key=TituloPaises}"
               Text="{Binding Country.Name}" />
        <Button Text="{resx:Localize Key=TituloGravar}"
                Command="{Binding SaveCommand}" />
    </VerticalStackLayout>
</ContentPage>