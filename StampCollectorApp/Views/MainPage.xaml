<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:StampCollectorApp.ViewModels"
    x:Class="StampCollectorApp.Views.MainPage"
    Title="Coleção de selos"
    BackgroundColor="#f3f4f6">

    <Grid RowDefinitions="Auto,*" Padding="12">
        <Frame BackgroundColor="White" CornerRadius="10" Padding="8" HasShadow="False">
            <Entry
                Placeholder="Pesquisar..."
                Text="{Binding SearchQuery}"
                PlaceholderColor="#999"
                FontSize="14" />
        </Frame>
        <Button
            Text="Novo"
            Command="{Binding AddStampCommand}"
            BackgroundColor="#007AFF"
            TextColor="White"
            FontAttributes="Bold"
            HeightRequest="44" />

        <!--<Button
            Text="Re-criar base de dados"
            Command="{Binding ResetDatabaseCommand}"
            BackgroundColor="#007AFF"
            TextColor="White"
            FontAttributes="Bold"
            HeightRequest="44" />
            <Button
            Text="Limpar dados"
            Command="{Binding ClearDataCommand}"
            BackgroundColor="#007AFF"
            TextColor="White"
            FontAttributes="Bold"
            HeightRequest="44" />-->


        <CollectionView Grid.Row="1" ItemsSource="{Binding FilteredStamps}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="12" Padding="12" Margin="0,0,0,10" BackgroundColor="White" HasShadow="True">
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Frame WidthRequest="80"
                           HeightRequest="80"
                           CornerRadius="40"
                           Padding="0"
                           IsClippedToBounds="True"
                           HasShadow="False"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"
                           Margin="0,0,10,0">
                                <Image Source="{Binding ImagePath, TargetNullValue='gallery.png'}"
                                       WidthRequest="80"
                                       HeightRequest="80"
                                       Aspect="AspectFill" />
                            </Frame>
                            <StackLayout>
                                <Label Text="{Binding Name}" FontSize="14"  FontAttributes="Bold" />
                                <Label Text="{Binding Year}" FontSize="14" TextColor="DarkGray" />
                                <Label Text="{Binding Condition}" FontSize="14" />
                                <HorizontalStackLayout Spacing="10" Margin="0,12,0,0" >
                                    <Button Text="Editar" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainViewModel}}, Path=EditStampCommand}" 
                                    CommandParameter="{Binding .}" 
                                    BackgroundColor="#007AFF" 
                                    TextColor="White" />
                                    <Button Text="Apagar" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainViewModel}}, Path=DeleteStampCommand}" 
                                    CommandParameter="{Binding .}" 
                                    BackgroundColor="Crimson" 
                                    TextColor="White" />
                                    <!-- New: Fetch Image button -->
                                    <!--<Button Text="Get Image"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainViewModel}}, Path=FetchImageForStampCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="#FFA500"
                                    TextColor="White" />-->
                                </HorizontalStackLayout>
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
